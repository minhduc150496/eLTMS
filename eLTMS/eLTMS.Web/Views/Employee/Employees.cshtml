
@{
                /**/

                ViewBag.Title = "Employees";
                Layout = "~/Views/Shared/_LayoutPageWarehouseManagement.cshtml";
}

<section class="content-header">
    <h1>
        Quản lý nhân viên
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <h3 class="box-title">Danh sách nhân viên</h3>
                <!-- /.box-header -->
                <div class="box-body">
                    <button class="btn btn-success" id="btnAddNew">Thêm nhân viên</button>
                    <br />
                    <br />

                    <input type="text" id="txtSearch" placeholder="Xin vui lòng nhập tên" />
                    <button class="btn btn-success" id="btnSearch">
                        Tìm kiếm
                    </button>
                    <table id="example2" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Mã nhân viên</th>
                                <th>Tên nhân viên</th>
                                <th>Số điện thoại</th>
                                <th>Chức vụ</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody id="tblData"></tbody>
                    </table>
                </div>
            </div>
            <!-- /.col -->
        </div>
        <!-- /.col -->
    </div>
</section>
<!-- /.content -->
<!-- Modal -->
<div style="margin-left:35%" id="pagination" class="pagination">
</div>
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title" id="lblPopupTitle">Mã vật tư</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal" action="/action_page.php">

                    <input type="hidden" class="form-control" id="txtEmployeeId" name="txtEmployeeId" value="0">
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">Mã Account</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="txtAccountId" name="txtAccountId">
                        </div>
                    </div>
                    <input type="hidden" class="form-control" id="txtEmployeeId" name="txtEmployeeId" value="0">
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">Mã nhân viên</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="txtID" name="txtID">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">Tên Nhân Viên</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="txtName" name="txtName">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="pwd">Giới tính</label>
                        <div class="col-sm-10">
                            <select class="form-control" id="ddlGender">
                                <option value="">
                                    ----- Chọn -----
                                </option>
                                <option value="Male">
                                    Nam
                                </option>
                                <option value="Female">
                                    Nữ
                                </option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">Năm sinh</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="txtDB" name="txtDB">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">Số điện thoại</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="txtPhoneNumber" name="txtPhoneNumber">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">Địa chỉ nhà</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="txtHomeAddress" name="txtHomeAddress">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">Ngày bắt đầu làm việc</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="txtSD" name="txtSD">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="pwd">Chức vụ</label>
                        <div class="col-sm-10">
                            <select class="form-control" id="ddlRole">
                                <option value="">
                                    ----- Chọn -----
                                </option>
                                <option value="Doctor">
                                    Bác sĩ
                                </option>
                                <option value="Nurse">
                                    Y tá
                                </option>
                                <option value="Warehouse">
                                    Quản kho
                                </option>
                                <option value="Admin">
                                    Quản lý
                                </option>
                                <option value="Lab">
                                    Kỹ thuật viên
                                </option>
                                <option value="Receptionist">
                                    Tiếp tân
                                </option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="pwd">Trạng thái</label>
                        <div class="col-sm-10">
                            <select class="form-control" id="ddlStatus">
                                <option value="">
                                    ----- Chọn -----
                                </option>
                                <option value="Working">
                                    Đang hoạt động
                                </option>
                                <option value="Stop">
                                    Tạm dừng
                                </option>
                                <option value="Delete">
                                    Nghỉ việc
                                </option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="button" id="btnSave" class="btn btn-success">Lưu</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>





<script id="data-template" type="x-tmpl-mustache">
    <tr>
        <td>{{EmployeeID}}</td>
        <td>{{FullName}}</td>
        <td>{{PhoneNumber}}</td>
        <td>{{Role}}</td>
        <td>
            <button class="btn btn-primary btn-edit" data-id="{{EmployeeID}}"><i class="fa fa-pencil-square-o"></i></button>
            <button class="btn btn-danger btn-delete" data-id="{{EmployeeID}}"><i class="fa fa-trash"></i></button>

        </td>
    </tr>
</script>



<script src="~/Scripts/customScript/employee.js"></script>