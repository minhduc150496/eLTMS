@{
    /**/

    ViewBag.Title = "Feedbacks";
    Layout = "~/Views/Shared/_LayoutPageWarehouseManagement.cshtml";
}

<section class="content-header">
    <h1>
        Quản lý Feedback
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <h3 class="box-title">Danh sách Feedback</h3>
                <!-- /.box-header -->
                <div class="box-body">
                  <!--<button class="btn btn-success" id="btnAddNew">Thêm Feedback</button>-->
                    <br />
                    <br />

                    <input type="text" id="txtSearch" placeholder="Xin vui lòng nhập dữ liệu cần tìm" />
                    <button class="btn btn-success" id="btnSearch">
                        Tìm kiếm
                    </button>
                    <table id="example2" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Tên nhân viên</th>
                                <th>Tên bệnh nhân</th>
                                <th>Ngày nhận</th>
                                <th>Trạng thái</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody id="tblData"></tbody>
                    </table>
                </div>
            </div>
            <!-- /.col -->
        </div>
        <!-- /.col -->
    </div>
</section>
<!-- /.content -->
<!-- Modal -->
<div style="margin-left:35%" id="pagination" class="pagination">
</div>
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title" id="lblPopupTitle"></h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal" action="/action_page.php">

                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">Mã Feedback</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="txtFeedbackId" name="txtFeedbackId" readonly="readonly">
                        </div>
                    </div>
                    <input type="hidden" class="form-control" id="txtFeedbackId" name="txtFeedbackId" value="0" readonly="readonly">
                    <div class="form-group" style="display:none">
                        <label class="control-label col-sm-2" for="email">Mã Feedback</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="txtFeedbackId" name="txtFeedbackId" readonly="readonly">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">Tên Nhân Viên</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="txtEmployeeName" name="txtEmployeeName" readonly="readonly">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">Tên Bệnh Nhân</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="txtPatientName" name="txtPatientName" readonly="readonly">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">Nội Dung</label>
                        <div class="col-sm-10">
                            <textarea type="text" class="form-control" id="txtContext" name="txtContext" readonly="readonly"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">Ngày Nhận</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="txtDay" name="txtDay" readonly="readonly">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="pwd">Trạng thái</label>
                        <div class="col-sm-10">
                            <select class="form-control" id="ddlStatus">
                                <option value="">
                                    ----- Chọn -----
                                </option>
                                <option value="Đã Đọc">
                                    Đã Đọc
                                </option>
                                <option value="Chưa Đọc">
                                    Chưa Đọc
                                </option>
                                <option value="Quan trọng">
                                    Quan trọng
                                </option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="button" id="btnSave" class="btn btn-success">Lưu</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>
<script id="data-template" type="x-tmpl-mustache">
    <tr>
        <td>{{EmployeeName}}</td>
        <td>{{PatientName}}</td>
        <td>{{ReceiveDateTime}}</td>
        <td>{{Status}}</td>
        <td>
            <button class="btn btn-primary btn-edit" data-id="{{FeedbackId}}"><i class="fa fa-pencil-square-o"></i></button>
            <button class="btn btn-danger btn-delete" data-id="{{FeedbackId}}"><i class="fa fa-trash"></i></button>

        </td>
    </tr>
</script>

<script src="~/Scripts/customScript/Feedback.js"></script>