
@{
    ViewBag.Title = "SampleFail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .modal {
        overflow: auto !important;
    }
</style>
<style>
    .alertQuanity {
        background-color: orange;
    }
</style>
<section class="content-header">
    <h1>
        Xử lý mẫu xét nghiệm chưa đạt
    </h1>
</section>

<!-- Main content -->
<section class="content">

    <div class="box">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title" id="lblPopupTitle">Danh sách mẫu xét nghiệm</h4>
        </div>
        <div class="modal-body">
            <input type="date" id="txtSearchDate" />
            <form class="form-horizontal">
                <table id="example2" class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Mã lịch hẹn</th>
                            <th>Tên xét nghiệm</th>
                            <th>Mẫu xét nghiệm</th>
                            <th>Trạng thái</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody id="tblDataLabTesting"></tbody>
                </table>
                <div style="margin-left:35%" id="pagination" class="pagination"></div>
            </form>
        </div>
    </div>
</section>

<script id="dataLabTesting-template" type="x-tmpl-mustache">
    <tr>
        <td>{{Getting}}</td>
        <td>{{Name}}</td>
        <td>{{Group}}</td>
        <td>{{Status}}</td>       
        <td>
                <button class="btn btn-danger btn-changeLabtestingStatus" data-id="{{LabTestingId}}"><i class="fa fa-refresh"></i></button>

            </td>
    </tr>
</script>

