<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title" id="lblPopupTitle">Mã vật tư</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal" action="/action_page.php">
                    <input type="hidden" class="form-control" id="txtBranchId" name="txtName">
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">Tên vật tư</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="txtBranchName" name="txtName">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-2" for="pwd">Loại vật tư</label>
                        <div class="col-sm-10">
                            <select class="form-control" id="ddlSupplyType">
                                <option value="">
                                    ----- Chọn loại vật tư  -----
                                </option>
                                <option value="1">
                                    Hóa chất
                                </option>
                                <option value="2">
                                    Dụng cụ
                                </option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-2" for="pwd">Số lượng</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="txtBranchName" name="txtName">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">Ghi chú</label>
                        <div class="col-sm-10">
                            <textarea rows="4" cols="50" class="form-control"></textarea>
                        </div>
                    </div>




                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="button" id="btnSave" class="btn btn-success">Tạo mới</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
