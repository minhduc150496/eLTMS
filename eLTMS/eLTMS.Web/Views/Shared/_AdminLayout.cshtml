    @*<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js"></script>*@

</head>
<body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">
        <header class="main-header">
            <!-- Content Header (Page header) -->
            <!-- Logo -->
            <a href="index2.html" class="logo">
                <!-- mini logo for sidebar mini 50x50 pixels -->
                <span class="logo-mini"><b>M</b>L</span>
                <!-- logo for regular state and mobile devices -->
                <span class="logo-lg"><b>Medic</b>Lab</span>
            </a>
            <!-- Header Navbar: style can be found in header.less -->
            <nav class="navbar navbar-static-top">
                <!-- Sidebar toggle button-->
                <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
                    <span class="sr-only">Toggle navigation</span>
                </a>
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        <!-- Notifications: style can be found in dropdown.less -->
                        <li class="dropdown notifications-menu">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <i class="fa fa-bell-o"></i>
                                <span class="label label-danger" id="number-of-noti" style="display: none">0</span>
                            </a>
                            <ul class="dropdown-menu">
                                <li class="header">Thông báo mới:</li>
                                <li>
                                    <!-- inner menu: contains the actual data -->
                                    <ul class="menu" id="menu-noti"></ul>
                                </li>
                                <li class="footer"><a href="#">View all</a></li>
                            </ul>
                        </li>

                        <!-- User Account: style can be found in dropdown.less -->
                        <li class="dropdown user user-menu">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <img src="@(avatarUrl)" class="user-image" alt="User Image">
                                <span class="hidden-xs">@(fullName)</span>
                            </a>
                            <ul class="dropdown-menu">
                                <!-- User image -->
                                <li class="user-header">
                                    <img src="@(avatarUrl)" class="img-circle" alt="User Image">
                                    <p>
                                        @(fullName)
                                        <small>@(roleName)</small>
                                    </p>
                                </li>
                                <!-- Menu Footer-->
                                <li class="user-footer">
                                    <div class="pull-left">
                                        <a href="#" class="btn btn-default btn-flat">Hồ sơ</a>
                                    </div>
                                    <div class="pull-right">
                                        <a href="@Url.Action("Logout", "Account")" class="btn btn-default btn-flat">Đăng xuất</a>
                                    </div>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>
        <!-- Left side column. contains the logo and sidebar -->
        <aside class="main-sidebar">
            <!-- sidebar: style can be found in sidebar.less -->
            <section class="sidebar">

                <!-- search form -->
                <!-- /.search form -->
                <!-- sidebar menu: : style can be found in sidebar.less -->
                <ul class="sidebar-menu" data-widget="tree">
                    <!--<li class="header">MAIN NAVIGATION</li>-->

                    @if (roleId == (int)RoleEnum.Manager || roleId == (int)RoleEnum.Cashier)
                    {
                        <li @(controllerName == "Cashier" ? "class=active" : "")>
                            <a href="@Url.Action("", "Cashier")">
                                <i class="fa fa-calendar"></i>
                                <span>Quản lý cuộc hẹn</span>
                            </a>
                        </li>
                    }
                    @if (roleId == (int)RoleEnum.Manager || roleId == (int)RoleEnum.Nurse)
                    {
                        <li @(controllerName == "Nurse" ? "class=active" : "")>
                            <a href="@Url.Action("", "Nurse")">
                                <i class="fa fa-flask"></i>
                                <span>Lấy mẫu xét nghiệm</span>
                            </a>
                        </li>
                    }
                    @if (roleId == (int)RoleEnum.Manager || roleId == (int)RoleEnum.LabTechnician || roleId == (int)RoleEnum.Doctor)
                    {
                        <li class="treeview @(controllerName == "LabTest" ? "menu-open" : "")">
                            <a href="#">
                                <i class="fa fa-object-ungroup"></i>
                                <span>Quản lý Xét nghiệm</span>
                                <span class="pull-right-container">
                                    <i class="fa fa-angle-left pull-right"></i>
                                </span>
                            </a>
                            <ul class="treeview-menu" @(controllerName == "LabTest" ? "style=display:block" : "")>
                                @if (roleId == (int)RoleEnum.Manager || roleId == (int)RoleEnum.LabTechnician)
                                {
                                    <li @(actionName == "LabTests" ? "class=active" : "")>
                                        <a href="@Url.Action("LabTests", "LabTest")"><i class="fa fa-hand-o-right"></i> <span>Quản lý loại xét nghiệm</span></a>
                                    </li>
                                }
                                @if (roleId == (int)RoleEnum.Manager || roleId == (int)RoleEnum.LabTechnician)
                                {
                                    <li @(actionName == "LabTesting" ? "class=active" : "")>
                                        <a href="@Url.Action("LabTesting", "LabTest")"><i class="fa fa-hand-o-right"></i> <span>Xử lý mẫu xét nghiệm</span></a>
                                    </li>
                                }
                                @if (roleId == (int)RoleEnum.Manager || roleId == (int)RoleEnum.LabTechnician)
                                {
                                    <li @(actionName == "LabTestingResult" ? "class=active" : "")>
                                        <a href="@Url.Action("LabTestingResult", "LabTest")"><i class="fa fa-hand-o-right"></i> <span>Bác sĩ nhận xét</span></a>
                                    </li>
                                }
                                @if (roleId == (int)RoleEnum.Manager || roleId == (int)RoleEnum.LabTechnician || roleId == (int)RoleEnum.Doctor)
                                {
                                    <li @(actionName == "LabTestingDone" ? "class=active" : "")>
                                        <a href="@Url.Action("LabTestingDone", "LabTest")"><i class="fa fa-hand-o-right"></i> <span>Kết quả</span></a>
                                    </li>
                                }
                            </ul>
                        </li>
                    }
                    @if (roleId == (int)RoleEnum.Manager || roleId == (int)RoleEnum.Cashier)
                    {
                        <li class="treeview @("Patient,Employee".Contains(controllerName) ? "menu-open" : "")">
                            <a href="#">
                                <i class="fa fa-child"></i>
                                <span>Quản lý Con Người</span>
                                <span class="pull-right-container">
                                    <i class="fa fa-angle-left pull-right"></i>
                                </span>
                            </a>
                            <ul class="treeview-menu" @("Patient,Employee".Contains(controllerName) ? "style=display:block" : "")>
                                @if (roleId == (int)RoleEnum.Manager || roleId == (int)RoleEnum.Cashier)
                                {
                                    <li @(actionName == "Patients" ? "class=active" : "")>
                                        <a href="@Url.Action("Patients", "Patient")"><i class="fa fa-hand-o-right"></i> <span>Quản lý Bệnh nhân</span></a>
                                    </li>
                                }
                                @if (roleId == (int)RoleEnum.Manager)
                                {
                                    <li @(actionName == "Employees" ? "class=active" : "")>
                                        <a href="@Url.Action("Employees", "Employee")"><i class="fa fa-hand-o-right"></i> <span>Quản lý Nhân viên</span></a>
                                    </li>
                                }
                            </ul>
                        </li>
                    }
                    @if (roleId == (int)RoleEnum.Manager || roleId == (int)RoleEnum.WarehouseKeeper)
                    {
                        <li class="treeview @(controllerName == "WareHouse" ? "menu-open" : "")">
                            <a href="#">
                                <i class="fa fa-industry"></i>
                                <span>Quản lý kho và vật tư</span>
                                <span class="pull-right-container">
                                    <i class="fa fa-angle-left pull-right"></i>
                                </span>
                            </a>
                            <ul class="treeview-menu" @(controllerName == "WareHouse" ? "style=display:block" : "")>
                                <li @(actionName == "Supplies" ? "class=active" : "")>
                                    <a href="@Url.Action("Supplies", "WareHouse")"><i class="fa fa-hand-o-right"></i> <span>Quản lý vật tư</span></a>
                                </li>
                                <li @(actionName == "ImportSupplies" ? "class=active" : "")>
                                    <a href="@Url.Action("ImportSupplies", "WareHouse")"><i class="fa fa-hand-o-right"></i> <span>Quản lý nhập kho</span></a>
                                </li>
                                <li @(actionName == "ExportSupplies" ? "class=active" : "")>
                                    <a href="@Url.Action("ExportSupplies", "WareHouse")"><i class="fa fa-hand-o-right"></i> <span>Quản lý xuất kho</span></a>
                                </li>
                                <li @(actionName == "Inventory" ? "class=active" : "")>
                                    <a href="@Url.Action("Inventory", "WareHouse")"><i class="fa fa-hand-o-right"></i> <span>Kiểm kho</span></a>
                                </li>
                            </ul>
                        </li>
                    }
                    @if (roleId == (int)RoleEnum.Manager)
                    {
                        <li @(controllerName == "Feedback" ? "class=active" : "")>
                            <a href="@Url.Action("Feedbacks", "Feedback")">
                                <i class="fa fa-newspaper-o"></i>
                                <span>Quản lý Feedback</span>
                            </a>
                        </li>
                    }
                </ul>
            </section>
            <!-- /.sidebar -->
        </aside>
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            @RenderBody()
        </div>
        <!-- /.content-wrapper -->
        <footer class="main-footer">
            <div class="pull-right hidden-xs">
                <b>Version</b> 2.4.0
            </div>
            <strong>Copyright &copy; 2018 <a href="#">eLTMS Team</a>.</strong> All rights reserved.
        </footer>
        <!-- /.control-sidebar -->
        <!-- Add the sidebar's background. This div must be placed
             immediately after the control sidebar -->
        <div class="control-sidebar-bg"></div>
    </div>
    <!-- ./wrapper -->
    <!-- jQuery 3 -->
    @*<script src="~/Assets/bower_components/jquery/dist/jquery.min.js"></script>*@
    <!-- jQuery UI 1.11.4 -->
    <script src="~/Assets/bower_components/jquery-ui/jquery-ui.min.js"></script>
    <!-- Resolve conflict in jQuery UI tooltip with Bootstrap tooltip -->
    <script>$.widget.bridge('uibutton', $.ui.button);</script>
    <!-- Bootstrap 3.3.7 -->
    <script src="~/Assets/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- Morris.js charts -->
    <script src="~/Assets/bower_components/raphael/raphael.min.js"></script>
    <script src="~/Assets/bower_components/morris.js/morris.min.js"></script>
    <!-- Sparkline -->
    <script src="~/Assets/bower_components/jquery-sparkline/dist/jquery.sparkline.min.js"></script>
    <!-- jvectormap -->
    <script src="~/Assets/plugins/jvectormap/jquery-jvectormap-1.2.2.min.js"></script>
    <script src="~/Assets/plugins/jvectormap/jquery-jvectormap-world-mill-en.js"></script>
    <!-- jQuery Knob Chart -->
    <script src="~/Assets/bower_components/jquery-knob/dist/jquery.knob.min.js"></script>
    <!-- daterangepicker -->
    <script src="~/Assets/bower_components/moment/min/moment.min.js"></script>
    <script src="~/Assets/bower_components/bootstrap-daterangepicker/daterangepicker.js"></script>
    <!-- datepicker -->
    <script src="~/Assets/bower_components/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>
    <!-- Bootstrap WYSIHTML5 -->
    <script src="~/Assets/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.all.min.js"></script>
    <!-- Slimscroll -->
    <script src="~/Assets/bower_components/jquery-slimscroll/jquery.slimscroll.min.js"></script>
    <!-- FastClick -->
    <script src="~/Assets/bower_components/fastclick/lib/fastclick.js"></script>
    <!-- AdminLTE App -->
    <script src="~/Assets/dist/js/adminlte.min.js"></script>
    <!-- AdminLTE dashboard demo (This is only for demo purposes) -->
    <script src="~/Assets/dist/js/pages/dashboard.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="~/Assets/dist/js/demo.js"></script>

    <!-- Firebase -->
    <script src="https://www.gstatic.com/firebasejs/5.5.7/firebase.js"></script>
    <script src="https://www.gstatic.com/firebasejs/5.5.7/firebase-app.js"></script>
    <script src="https://www.gstatic.com/firebasejs/5.5.7/firebase-messaging.js"></script>

    <script id="menu-noti-item-template" type="x-tmpl-mustache">
        <li>
            <a href="{{Url}}">
                <i class="fa fa-users text-aqua"></i> {{Message}}
            </a>
        </li>
    </script>

    <script>
        // LamNH
        // Receive notifications from Firebase

        var config = {
            apiKey: "AIzaSyBmErEOrR3HvYOALMjpqmP4dwiYUuAPK7E",
            authDomain: "eltms-test1.firebaseapp.com",
            databaseURL: "https://eltms-test1.firebaseio.com",
            projectId: "eltms-test1",
            storageBucket: "eltms-test1.appspot.com",
            messagingSenderId: "1013768931631"
        };
        firebase.initializeApp(config);

        const messaging = firebase.messaging();
        messaging
            .requestPermission() //Firebase
            .then(function () {
                console.log("Notification permission granted.");

                // get the token in the form of promise
                return messaging.getToken()
            })
            .then(function (token) {
                //console.log("token: ", token);
                $.ajax({
                    url: '/api/token/create',
                    type: 'POST',
                    dataType: 'JSON',
                    data: { TokenString: token },
                    success: function (result) {
                        if (result.sucess) {
                            console.log("Token has registered. Now you will receive notifications on this device.");
                        }
                        else {
                            console.log("Token is existing.");
                        }
                    },
                    fail: function () {
                        console.log("Token registration failed.");
                    }
                });
            })
            .catch(function (err) {
                console.log("Unable to get permission to notify. ", err);
            });

        var loadMessage = function (payload) {
            console.log("Message received. ", payload);
            var nNoti = $("#number-of-noti").html();
            nNoti = parseInt(nNoti) + 1;
            $("#number-of-noti").html(nNoti);
            if (nNoti == 0) {
                $("#number-of-noti").hide(0);
            } else {
                $("#number-of-noti").show(0);
            }
            var template = $("#menu-noti-item-template").html();
            var data = {
                Url: "#",
                Message: payload.data.message
            };
            var html = Mustache.render(template, data);
            $("#menu-noti").prepend(html);

            // Toastr
            toastr["success"](payload.data.message);
          
            //Reload table ajax
            homeController.loadDataBySample();
        
        }
        messaging.onMessage(loadMessage);

    </script>

    @RenderSection("scripts", required: false)
</body>
</html>


